<%- include('./partials/header') %>
<head>
    <link rel="stylesheet" href="/stylesheets/style.css">

    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>

    <!-- CRIAÇÃO DO CONTAINER PARA ENGLOBAR O CONTEUDO E AFASTA-LO DAS BORDAS, OBS CONTAINER CLASSE DO BOOTSTRAP, NAO ESTILIZAMOS. -->
    <section class="container paine-usuario-conteudo">

        <!-- div da parte meus dados, obs aqui utilizamos grid bootstrap onde tem col-md-8 por exemplo é quantas colunas esse item vai ocupar, lembrando q o grid tem 12 colunas, entao se quero 3 items em uma coluna, divido 12/3 e coloco col-md-resultado para ter a mesma divisao no grid de 12 -->
        <div class="meus-dados">
            <h2>MEUS DADOS</h2>
            
            <form action="/painelUsuario/dadosCliente" method="GET" class="meus-dados-form mt-4" enctype="multipart/form-data">
                <!-- O QUE QUEREMOS QUE FIQUE NA MESMA LINHA DEIXAMOS DENTRO DA DIV ROW(LINHA) O QUE QUEREMOS QUE FIQUE ABAIXO CRIAMOS OUTRA DIV ROW -->
                <div class="row">
                    <div class="col-md-8 col-xs-4">
                        <div class="form-group">
                            <label for="nome">Nome Completo</label>
                            <input type="text" name="nome" class="form-control" value="<%= Cliente.nomeCompleto %>" required>
                        </div>
                                                
                    </div>
                    <div class="col-md-4 col-xs-4">
                        <div class="form-group">
                            <label for="foto-perfil">Sua Foto:</label>
                            <input type="file" class="form-control" name="foto-perfil" value="<%= Cliente.foto %>" required>
                        </div>
                    </div>
                </div>


                <div class="row">
                    <div class="col-md-8 col-xs-4">
                        <div class="form-group">
                            <label for="email">Email:</label>
                            <input type="email" name="email" class="form-control" value="<%= Cliente.email %>" required>
                        </div>
                    </div>
                    <div class="col-md-4 col-xs-4">
                        <div class="form-group">
                            <label for="telefone">Telefone:</label>
                            <input type="text" name="telefone" class="form-control" value="<%= Cliente.telefone %>" required>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4 col-xs-2">
                        <div class="form-group">
                            <label for="sexo">Sexo:</label>
                            <select class="form-control" data-size="5" data-live-search="true" data-width="100%"
                                name="sexo" value="<%= Cliente.sexo %>" required>
                                <option selected disabled>Escolha uma opção</option>
                                <option>Masculino</option>
                                <option>Feminino</option>
                                <option>Outro</option>
                            </select>
                        </div>
                    </div>

                    <div class="col-md-4 col-xs-2">
                        <div class="form-group">
                            <label for="data-nascimento">Data de nascimento:</label>
                            <input type="date" name="data-nascimento" class="form-control" value="<%= Cliente.datanascimento %>">
                        </div>
                    </div>

                    <div class="col-md-4 col-xs-2">
                        <div class="form-group">
                            <label for="cpf">CPF:</label>
                            <input type="text" name="cpf" class="form-control" value="<%= Cliente.cpf %>">
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4 col-xs-2">
                        <div class="form-group">
                            <label for="senha">Senha:</label>
                            <input type="password" name="senha" class="form-control" value="<%= Cliente.senha %>">
                        </div>
                    </div>

                    <div class="col-md-4 col-xs-2">
                        <div class="form-group">
                            <label for="confirma-senha">Confirmar Senha:</label>
                            <input type="password" name="confirma-senha" class="form-control">
                        </div>
                    </div>

                    <div class="col-md-4 col-xs-2">
                        <div class="form-group">
                            <label for="cep">CEP:</label>
                            <input type="text" name="cep" class="form-control" value="<%= Cliente.enderecos.cep %>">
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12 col-xs-2">
                        <div class="form-group">
                            <label for="endereco">Endereço:</label>
                            <input type="text" name="endereco" class="form-control">
                        </div>
                    </div>
                </div>

                <!-- OBS CSS DESSE BOTAO NA LINHA 181 DO ARQUIVO CSS -->
                <div class="row">
                    <div class="col-md-12 text-end mt-4">
                        <button class="btn btn-primary btn-lg" id="submit-button" type="submit">Salvar</button>
                        <button class="btn btn-primary btn-lg" id="submit-button" type="submit">Editar</button>
                        <button class="btn btn-primary btn-lg" id="submit-button" type="submit">Excluir</button>
                    </div>
                </div>
            </form>
        
        </div>

        <div class="historico-compras">
            <h2>HISTÓRICO DE COMPRAS</h2>

            <form action="" class="historico-compras-form mt-4">
                <div class="row">
                    <div class="col-md-2 col-xs-4">
                        <div class="form-group">
                            <label for="numero">Número*</label>
                            <input type="number" name="numero" class="form-control" required>
                        </div>
                    </div>

                    <div class="col-md-2 col-xs-4">
                        <div class="form-group">
                            <label for="data">Data*</label>
                            <input type="date" name="data" class="form-control" required>
                        </div>
                    </div>

                    <div class="col-md-2 col-xs-4">
                        <div class="form-group">
                            <label for="total">Total*</label>
                            <input type="float" name="total" class="form-control" required>
                        </div>
                    </div>

                    <div class="col-md-3 col-xs-4">
                        <div class="form-group">
                            <label for="status">Status*</label>
                            <input type="text" name="status" class="form-control" required>
                        </div>
                    </div>

                    <div class="col-md-3 col-xs-4">
                        <div class="form-group">
                            <label for="detalhes">Detalhes*</label>
                            <input type="text" name="detalhes" class="form-control" required>
                        </div>
                    </div>

                </div>
        </div>

        <div class="resumo-pedido mt-4 mb-5">
            <h2>RESUMO DO PEDIDO</h2>

            <table class="table mt-4 mb-4">
                <thead>
                    <tr>
                        <th scope="col">ITEM</th>
                        <th scope="col">QUANTIDADE</th>
                        <th scope="col">PREÇO</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th scope="row">1</th>
                        <td>Ração</td>
                        <td>R$ 50,00</td>

                    </tr>
                    <tr>
                        <th scope="row">2</th>
                        <td>Banho/Tosa</td>
                        <td>R$ 100,00</td>
                    </tr>

                    <tr>
                        <th scope="row">3</th>
                        <td>Castração</td>
                        <td>R$ 200,00</td>
                    </tr>

                </tbody>
            </table>

            <!-- OBS CSS DESSE BOTAO NA LINHA 185 DO ARQUIVO CSS -->
            <button type="button" class="btn btn-primary btn-lg" id="pedido">Repetir pedido</button>
            <button id="button-detalhes" type="button" class="btn btn-secondary btn-lg">Ver mais detalhes</button>

        </div>

    </section>


    <!--FOOTER -->

    <%- include('./partials/footer') %>