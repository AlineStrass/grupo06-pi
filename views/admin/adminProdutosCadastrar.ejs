<%- include('../partials/headerAdmin') %>
    <%- include('../partials/head') %>

        <body>
            <main class="admin">
                <div class="container">
                    <h1 class="title-admin">Painel administrativo</h1>

                    <form action="/admin/acaoCadastrarProdutos" method="POST" class="cadastroProdutos"
                        enctype="multipart/form-data">
                        <fieldset>
                            <legend class="title-admin">Novo Produto</legend>

                            <div>
                                <label for="nome">Nome:</label>
                                <input type="text" name="nome" id="nome" required>
                                                 
                            <div>
                                <label for="preco">Preço:</label>
                                <input type="text" name="preco" id="preco" required>
                            </div>

                            <div>
                                <label for="descricao">Descrição:</label>
                                <textarea name="descricao" id="descricao" cols="30" rows="5"></textarea>
                            </div>

                            <!-- erro por causa da option -->
                            <div>
                                <label for="categoria">Categoria:</label>
                                <select name="categoria" class="form-select" aria-label="Default select example">
                                    <!-- <option value="Ração">Ração</option>
                                    <option value="Petiscos">Petiscos</option>
                                    <option value="Brinquedos">Brinquedos</option>
                                    <option value="Higiene">Higiene</option>
                                    <option value="Camas">Camas</option>>
                                    <option value="Outros Acessórios">Outros Acessórios</option> -->
                                    <%for(var i=0; categoria.length; i++) {%>
                                        <option value="<%=categoria[i].id%>">
                                            <%=categoria[i].categoria%>
                                        </option>
                                    <% } %>
                                </select>


                                </select>

                            </div>

                            <div>
                                <label>Imagem:</label>
                                <input type="file" name="imagemProduto" />
                            </div>

                            <button class="btn-cadastroUsuarios" type="submit"
                                action="acaoCadastrarProdutos">Cadastrar</button>
                        </fieldset>
                    </form>

                    <button class="btn-cadastroUsuarios"> <a href="/admin/produtos">Voltar</a> </button>
                </div>
            </main>
        </body>

        </html>