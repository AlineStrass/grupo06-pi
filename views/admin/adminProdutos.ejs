<%- include('../partials/headerAdmin') %>

  <%- include('../partials/head') %>

    <body style="display: flex; height: 100vh; justify-content: center; flex-direction: column;">
      <form action="/admin/adminProdutos" method="GET" class="cadastroProdutos" enctype="multipart/form-data">
        <div class="container">
          <div class="row">
            <div class="col-12 text-center">
              <h1 class="title-admin">Painel administrativo</h1>
            </div>
          </div>
        </div>

        <div class="container">
          <div class="row">
            <div class="col-12">
              <h2>Produtos</h2>
            </div>

            <table class="table table-bordered">
              <thead>
                <tr>
                  <th scope="col">ID</th>
                  <th scope="col">Nome</th>
                  <th scope="col">Preço</th>
                  <th scope="col">Descrição</th>
                  <th scope="col">Categoria</th>
                  <th scope="col">Imagem</th>
                  <th>Ações</th>
                </tr>
              </thead>

              <tbody>
                <% for(produto of Produto) { %>
                  <tr>
                    <th scope="row">
                      <%= produto.id %>
                    </th>
                    <td>
                      <%= produto.nome %>
                    </td>
                    <td>
                      <%= produto.preco %>
                    </td>
                    <td>
                      <%= produto.descricao %>
                    </td>
                    <td>
                      <%= produto.categoria.categoria %>
                    </td>
                    <td>
                      <img src="/images/produtos/" width="90px"/>
                      <!-- <img src="/images/produtos/ produto[i].imagem[0]" /> -->
                    </td>

                    <td class="acoes-btn">


                      <a class="btn btn-primary btn-editar" href="/admin/editarProduto/<%=produto.id%>"
                        style="width: 135px;margin-top: 10px;">Editar</a>

                      <form action="/admin/deletarProduto/<%=produto.id%>" method="GET">
                        <button type="submit" class=" btn btn-primary btn-adin acoes-btn-editar"
                          style="width: 135px;">Excluir</button>
                      </form>
                    </td>

                  </tr>
                  <% } %>
              </tbody>

            </table>

            <a href="/admin/produtosCadastrar" class="btn btn-primary">Adicionar novo</a>
            <a href="/admin" class="btn btn-primary">Voltar</a>
          </div>
        </div>
      </form>
    </body>