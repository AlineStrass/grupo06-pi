<%- include('./partials/header') %>

    <head>
        <link rel="stylesheet" href="/stylesheets/style.css">
    </head>


    <main class="produtos-container">
        <section class="produtos-container-section" action="/produtos" method="GET">
            <% for(produto of Produto) { %>
                <div class="produtos-container-card">
                    <a class="box-produtos" href="/produtos/produtointerno">
                        <div class="produtos-container-image" value="<%= produto.foto %>" id="produtos-img">
                            <%= produto.foto %>
                        </div>

                        <h3 class="produtos-container-title" value="<%= produto.nome %>" name="nome">
                            <%= produto.nome %>
                        </h3>

                        <p class="produtos-container-info">
                            <span value="<%= produto.preco %>" class='produtos-container-price'>
                                <%= produto.preco %>
                            </span>
                        </p>
                    </a>
                </div>
                <% } %>
        </section>
    </main>


    <%- include('./partials/footer') %>