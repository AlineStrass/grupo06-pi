<%- include('./partials/header') %>

    <head>
        <link rel="stylesheet" href="/stylesheets/style.css">

        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet"
            integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
    </head>

    <div class="container-fluid">

        <section class="carrossel-home">
            <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                       
                        <img src="/images/home_img/cachorrinho.webp">
                        <img src="/images/home_img/porquinho-da-india.jpg">
                        <img src="/images/home_img/gato.jpg">
                    </div>
                    
                    <div class="carousel-item">
                        <img src="https://cdn.pixabay.com/photo/2016/02/18/18/37/puppy-1207816_960_720.jpg">
                        <img src="https://cdn.pixabay.com/photo/2017/02/20/18/03/cat-2083492_960_720.jpg">
                        <img src="https://cdn.pixabay.com/photo/2016/10/26/22/00/hamster-1772742_960_720.jpg"> /-->
                    </div>
            
                
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls"
                    data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls"
                    data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </section>

        <main class="produtos-container">
            <section class="produtos-container-section" action="/produtos" method="GET" enctype="multipart/form-data">
                <% for(produto of Produto) { %>
                    <div class="produtos-container-card">
                        <a class="box-produtos" href="/produtos/produtointerno/<%= produto.id%> ">
                            <div class="produtos-container-image" value="<%= produto.imagem.imagem %>" id="produtos-img">
                                <img src="/images/produtos/<%= produto.imagem.imagem %>"/>
                            </div>
    
                            <h3 class="produtos-container-title" value="<%= produto.nome %>" name="nome">
                                <%= produto.nome %>
                            </h3>
    
                            <p class="produtos-container-info">
                                <span value="<%= produto.preco %>" class='produtos-container-price'>
                                    <%= produto.preco %>
                                </span>
                            </p>
                        </a>
                    </div>
                <% } %>
            </section>
        </main>


    <%- include('./partials/footer') %>