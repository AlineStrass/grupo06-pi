<%- include('./partials/header') %>

    <head>
        <link rel="stylesheet" href="/stylesheets/style.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
            integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    </head>

    <body>
        <section class="container paine-usuario-conteudo">
            
            <div class="meus-dados">
                <h2>MEUS DADOS</h2>

                <form action="/painelUsuario/editarCadastro/<%=Cliente.id%>" method="GET" class="meus-dados-form mt-4">
                                    
                    <div class="row" style="
                    height: 58px;">
                        <div class="col-md-12 col-xs-2">
                            <div class="form-group">
                                <label for="nome">Nome Completo</label>
                                <input type="text" name="nome" class="form-control" value="<%= Cliente.nomeCompleto %>"
                                    required>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-8 col-xs-4">
                            <div class="form-group">
                                <label for="email">Email:</label>
                                <input type="email" name="email" class="form-control" value="<%= Cliente.email %>"
                                    required>
                            </div>
                        </div>
                        <div class="col-md-4 col-xs-4">
                            <div class="form-group">
                                <label for="telefone">Telefone:</label>
                                <input type="text" name="telefone" class="form-control" value="<%= Cliente.telefone %>"
                                    required>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4 col-xs-2">
                            <div class="form-group">
                                <label for="senha">Nova senha:</label>
                                <input type="password" name="senha" class="form-control">
                            </div>
                        </div>

                        <div class="col-md-4 col-xs-2">
                            <div class="form-group">
                                <label for="confirma-senha">Confirmar Senha:</label>
                                <input type="password" name="confirma-senha" class="form-control">
                            </div>
                        </div>

                        <div class="col-md-4 col-xs-2">
                            <div class="form-group">
                                <label for="cep">CEP:</label>
                                <input type="text" name="cep" class="form-control"
                                    value="<%= Cliente.enderecos[0].cep %>">
                            </div>
                        </div>
                    </div>

                    <div class="row" style="
                    height: 58px;">
                        <div class="col-md-12 col-xs-2">
                            <div class="form-group">
                                <label for="rua">Rua:</label>
                                <input type="text" name="rua" class="form-control"
                                    value="<%= Cliente.enderecos[0].rua %>">
                            </div>
                        </div>
                    </div>

                    <div class="row" >
                        <div class="col-md-8 col-xs-4">
                            <div class="form-group">
                                <label for="numero-casa">NÃºmero:</label>
                                <input type="text" name="numero-casa" class="form-control"
                                    value="<%= Cliente.enderecos[0].numero %>" required>
                            </div>
                        </div>
                        <div class="col-md-4 col-xs-4">
                            <div class="form-group">
                                <label for="complemento">Complemento:</label>
                                <input type="text" name="complemento" class="form-control"
                                    value="<%= Cliente.enderecos[0].complemento %>" required>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4 col-xs-2">
                            <div class="form-group">
                                <label for="bairro">Bairro:</label>
                                <input type="text" name="bairro" class="form-control"
                                    value="<%= Cliente.enderecos[0].bairro %>">
                            </div>
                        </div>

                        <div class="col-md-4 col-xs-2">
                            <div class="form-group">
                                <label for="cidade">Cidade:</label>
                                <input type="text" name="cidade" class="form-control"
                                    value="<%= Cliente.enderecos[0].cidade %>">
                            </div>
                        </div>

                        <div class="col-md-4 col-xs-2">
                            <div class="form-group">
                                <label for="estado">Estado:</label>
                                <input type="text" name="estado" class="form-control"
                                    value="<%= Cliente.enderecos[0].estado %>">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12 text-end mt-4">
                            <button class="btn btn-primary btn-lg" id="submit-button" type="submit"><a href="">Salvar</a></button>

                            <button class="btn btn-primary btn-lg" id="submit-button" type="submit"><a href=""> Voltar</a></button>
                        </div>
                    </div>
                </form>

            </div>

           
        </section>


        <!--FOOTER -->

        <%- include('./partials/footer') %>