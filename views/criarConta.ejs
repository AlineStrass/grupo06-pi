<%- include('./partials/header') %>

    <head>
        <link rel="stylesheet" href="/stylesheets/style.css">
    </head>

    <body class="body-login">

        <main class="formulario-login">

            <form class="criar-conta" action="/criarconta/acaoCadastrar" method="post">
                <h2 class="login">Cadastre-se:</h2>

                <div class="dados-cadastrais-conta">
                    <div class="campo-login">
                        <label class="inserir-dados-cadastro" for="email">E-mail:</label>
                        <input class="inserir-dados-cadastro" type="email" id="email" name="email"
                            placeholder="email@email.com.br" required>
                    </div>
                    <div class="campo-login">
                        <label class="inserir-dados-cadastro" for="telefone">Telefone:</label>
                        <input class="inserir-dados-cadastro" type="tel" id="telefone" name="telefone"
                            placeholder="(xx)xxxxx-xxxx" required>
                    </div>
                    <div class="campo-login">
                        <label class="inserir-dados-cadastro" for="nome">Nome Completo:</label>
                        <input class="inserir-dados-cadastro" type="text" id="nome" name="nomeCompleto" placeholder="Nome completo"
                            required>
                    </div>
                    <div class="campo-login">
                        <label class="inserir-dados-cadastro" for="foto">Foto:</label>
                        <input class="inserir-dados-cadastro" type="text" id="foto" name="foto" placeholder="Sua foto">
                    </div>
                    <div class="campo-login">
                        <label class="inserir-dados-cadastro" for="nome">CPF:</label>
                        <input class="inserir-dados-cadastro" type="text" id="sobrenome" name="cpf"
                            placeholder="" required>
                    </div>
                    <div class="campo-login">
                        <label class="inserir-dados-cadastro" for="datanascimento">Data de nascimento:</label>
                        <input class="inserir-dados-cadastro" type="text" id="datanascimento" name="datanascimento"
                            placeholder="00/00/0000">
                    </div>

                    <div class="campo-login">
                        <label class="inserir-dados-cadastro" for="rua">Rua:</label>
                        <input class="inserir-dados-cadastro" type="text" id="rua" name="rua" required>
                    </div>
                    <div class="campo-login">
                        <label class="inserir-dados-cadastro" for="numero">Número:</label>
                        <input class="inserir-dados-cadastro" type="number" id="numero" name="numero" required>
                    </div>
                    <div class="campo-login">
                        <label class="inserir-dados-cadastro" for="complemento">Complemento:</label>
                        <input class="inserir-dados-cadastro" type="text" id="complemento" name="complemento">
                    </div>
                    <div class="campo-login">
                        <label class="inserir-dados-cadastro" for="bairro">Bairro:</label>
                        <input class="inserir-dados-cadastro" type="text" id="bairro" name="bairro">
                    </div>
                    <div class="campo-login">
                        <label class="inserir-dados-cadastro" for="cidade">Cidade:</label>
                        <input class="inserir-dados-cadastro" type="text" id="cidade" name="cidade">
                    </div>
                    <div class="campo-login">
                        <label class="inserir-dados-cadastro" for="estado">Estado:</label>
                        <input class="inserir-dados-cadastro" type="text" id="estado" name="estado">
                    </div>
                    <div class="campo-login">
                        <label class="inserir-dados-cadastro" for="cep">CEP:</label>
                        <input class="inserir-dados-cadastro" type="text" id="cep" name="cep" required>
                    </div>

                    <div class="campo-login">
                        <label class="inserir-dados-cadastro" for="senha">Cadastrar senha:</label>
                        <input class="inserir-dados-cadastro" type="password" id="senha" name="senha"
                            placeholder="Digite sua senha" required>
                    </div>
                <!--
                    <div class="campo-login">
                        <label class="inserir-dados-cadastro" for="senha">Confirme sua senha:</label>
                        <input class="inserir-dados-cadastro" type="password" id="confirmSenha" name="confirmSenha"
                            placeholder="Digite sua senha novamente" required>
                    </div>
                -->    
                    <div class="campo-login">
                        <label class="inserir-dados-cadastro" for="gen">Genêro</label>
                    </div>

                    <div class="gender-input">
                        <div class="gender-group">
                            <div class="gender-input">
                                <input type="radio" id="female" name="sexo">
                                <label for="female">Feminino</label>
                            </div>

                            <div class="gender-input">
                                <input type="radio" id="male" name="sexo">
                                <label for="male">Masculino</label>
                            </div>

                            <div class="gender-input">
                                <input type="radio" id="others" name="sexo">
                                <label for="others">Outros</label>
                            </div>

                            <div class="gender-input">
                                <input type="radio" id="none" name="sexo">
                                <label for="none">Prefiro não dizer</label>
                            </div>

                        </div>
                    </div>

                </div>

                <p class="termo">Ao criar uma conta, você concorda com os <a class="termosCondicoes" href="#">Termos e
                        Condições</a> de Uso da Happy Pet. Para saber como tratamos os seus dados pessoais, acesse o
                    nosso
                    <a class="termosCondicoes" href="#">Aviso de Privacidade</a>.
                </p>

                <!--direcionar para a página de cadastro-->
                <button class="login-cadastro" type="submit" action="acaoCadastrar">Cadastrar</button>

            </form>

        </main>

    </body>

    </html>

    <!--CRIAR CONTA mantive sem footer/include (Bia)-->