<%- include('./partials/header') %>
<head>
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body> 

    <main>

        <form class="criar-conta">
            <h2>Cadastre-se:</h2>

            <div class="dados-cadastrais-conta">
                <div class="campo">
                <label for="email">E-mail:</label>
                <input type="email" id="email" name="email" placeholder="email@email.com.br" required>
                </div>
                <div class="campo">
                <label for="telefone">Telefone:</label>
                <input class="inserir-dados-cadastro" type="tel" id="telefone" name="telefone"
                    placeholder="(xx)xxxxx-xxxx" required>
                </div>
                <div class="campo">
                <label for="nome">Nome:</label>
                <input class="inserir-dados-cadastro" type="text" id="nome" name="nome" placeholder="Primeiro nome"
                    required>
                </div>
                <div class="campo">
                <label for="nome">Sobrenome:</label>
                <input class="inserir-dados-cadastro" type="text" id="sobrenome" name="sobrenome"
                    placeholder="Sobrenome" required>
                </div>
                <div class="campo">
                <label for="endereco">Endereço:</label>
                <input class="inserir-dados-cadastro" type="text" id="endereco" name="endereco" required>
                </div>
                <div class="campo">
                    <label for="numero">Número:</label>
                    <input class="inserir-dados-cadastro" type="number" id="numero" name="numero" required>
                </div>
                <div class="campo">
                    <label for="complemento">Complemento:</label>
                    <input class="inserir-dados-cadastro" type="text" id="complemento" name="complemento">
                </div>
                <div class="campo">
                    <label for="cep">CEP:</label>
                    <input class="inserir-dados-cadastro" type="number" id="cep" name="cep" required>
                </div>

                <div class="campo">
                    <label for="senha">Cadastrar senha:</label>
                    <input class="inserir-dados-cadastro" type="password" id="senha" name="senha"
                        placeholder="Digite sua senha" required>
                </div>

            </div>

            <p class="termos">Ao criar uma conta, você concorda com os <a class="termosCondicoes" href="#">Termos e
                    Condições</a> de Uso da Happy Pet. Para saber como tratamos os seus dados pessoais, acesse o nosso
                <a class="termosCondicoes" href="#">Aviso de Privacidade</a>.
            </p>

            <!--direcionar para a página de cadastro-->
            <button type="submit">Cadastrar</button>

        </form>

    </main>

</body>

</html>

