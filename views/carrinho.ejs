                <!--dados do comprador /-->

                <div class="col-md-8 order-md-1 cesta-cliente">
                    <h4 class="mb-3">Dados da compra</h4>
                    <div class="row">
                        <div class="col-md-9 mb-3">
                            <label for="nomeCompleto">Nome Completo </label>
                            <input type="text" class="form-control" id="nomeCompleto"
                                value="<%= Cliente.nomeCompleto %>" required>
                        </div>
                    </div>

                    <div class="mb-3">
                        <div class="col-md-9 mb-3">
                            <label for="email">Email <span class="text-muted"></span></label>
                            <input type="email" class="form-control" id="email" value="<%= Cliente.email %>" required>
                        </div>
                    </div>

                    <!--Pagamento-->

                    <h4 class="mb-3">Pagamento</h4>
                    <div class="d-block my-3"> </div>

                    <div class="row">
                        <div class="col-md-6 mb-3 cesta-pagamento">
                            <label for="cc-numero">Número do cartão </label>
                            <input type="text" class="form-control" id="cc-numero" placeholder="" required>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <label for="cc-expiracao">Data de expiração</label>
                            <input type="text" class="form-control" id="cc-expiracao" placeholder="" required>
                        </div>

                        <div class="col-md-3 mb-3">
                            <label for="cc-cvv">CVV</label>
                            <input type="text" class="form-control" id="cc-cvv" placeholder="" required>
