    <style>
      .small-img-group {
        display: flex;
        justify-content: space-between;
      }

      .small-img-col {
        flex-basis: 24%;
        cursor: pointer;
      }

      h1, h2, h3, li{
        color: #6A5495;
      }


    </style>

  </head>

  <body>
    <section class="container sproduct my-5 pt-5">
      <div class="row mt-5">
        <div class="col-lg-5 col-md-12 col-12">
          <img class="img-fluid w-100 pb-1" src="/images/produtos/caixaTransporte5.png" id="MainImg" alt="">

          <div class="small-img-group">
            <div class="small-img-col px-1">
              <img src="images/produtos/caixatransporte5.png" width="100%" class="small-img" alt="">
            </div>
            <div class="small-img-col px-1">
              <img src="images/produtos/caixatransporte2.png" width="100%" class="small-img" alt="">
            </div>
            <div class="small-img-col px-1">
              <img src="images/produtos/caixatransporte3.png" width="100%" class="small-img" alt="">
            </div>
            <div class="small-img-col px-1">
              <img src="images/produtos/caixatransporte4.png" width="100%" class="small-img" alt="">
