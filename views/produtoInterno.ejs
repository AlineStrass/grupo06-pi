<%- include('./partials/header') %>

  <head>
    <link rel="stylesheet" href="/stylesheets/style.css">
  </head>
      
    <div class="flex-container-produto-interno" action="/produtos/produtointerno/id" method="GET">
      <div class="caixa-transporte">

          <img src="/images/produtos/<%= produtos.foto %>" alt="foto do produto" />
      </div>

      <div class="info-produto-interno">
          <h2 class="produto-interno"><%= produtos.nome %></h2>
          <h4 class="produto-interno">Informações:</h4>
          <ul class="produto-interno">
              <li class="produto-interno"><%= produtos.descricao %></li>
          </ul>
          <h3 class="produto-interno"><%= produto.preco %></h3>
          <button class="botao-produto-interno">Adicionar ao carrinho</button>
      </div>
  </div>
        
 

    <%- include('./partials/footer') %>